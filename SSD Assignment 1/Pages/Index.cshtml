@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<div class="text-center">
    <h1 class="display-4">
        𝓒𝓮𝓼𝓪𝓻'𝓼 𝓒𝓻𝓮𝓪𝓽𝓾𝓻𝓮𝓼 | (Ｕ◕ฺ㉨◕ฺ)
    </h1>
    <p>Home for the pets</p>
</div>
<div class="container">
    <hr style="padding:20px 20px 20px 20px;" />
    <div class="splide">
        <div class="splide__track">
            <ul class="splide__list">
                <li class="splide__slide"><img src="~/images/puppy.jpg" /></li>
                <li class="splide__slide"><img src="~/images/hampter.png" /></li>
                <li class="splide__slide"><img src="~/images/cat.jpg" /></li>
                <li class="splide__slide"><img src="~/images/rabbit.jpg" /></li>
                <li class="splide__slide"><img src="~/images/guinea.jpg" /></li>


            </ul>
        </div>
    </div>
    <hr style="padding:20px 20px 20px 20px;" />
    <div class="row">
        <div class="col-sm-6">
            <img style="margin-bottom:10px" class="img-fluid" src="~/images/puppy.jpg" alt="#" /><br /><a class="btn btn-primary btn-group-lg" asp-page="Guide">
                <i class="fas fa-user">Click here to learn ways to take care of me</i>
            </a>
        </div>

        <div class="col-sm-6">
            <img style="margin-bottom:18px" class="img-fluid" src="~/images/hampter.jpeg" alt="#" /><br /><a class="btn btn-primary btn-group-lg" asp-page="Products/Index">
                <i class="fas fa-user">Click here to find products</i>
            </a>
        </div>

    </div>
    <div class="row">
        <div class="col-sm-9">

        </div>
        <div class="col-sm-3">
            <iframe src="https://discord.com/widget?id=847797670696714260&theme=dark" width="250" height="400" allowtransparency="true" frameborder="0" sandbox="allow-popups allow-popups-to-escape-sandbox allow-same-origin allow-scripts"></iframe>

        </div>
    </div>
</div>


<script src="~/js/slider.min.js" defer></script>
<link rel="stylesheet" href="~/css/slider.css" />

<script>
    document.addEventListener('DOMContentLoaded', function () {
        new Splide('.splide', { perPage: 2, autoplay: true, interval: 3000, arrows: false, pagination: false, rewind: true, fixedWidth: '25rem', fixedHeight: '15rem', cover: true, padding: '3em',gap:'2em'}).mount();
    });
</script>
