@page
@model SSD_Assignment_1.Pages.Admin.Roles.ManageModel
@{
    ViewData["Title"] = "Manage User Roles";
}
<h2 style="text-align:center;">Role-based Authorization Management</h2><br />
<br />
<body style=" text-align: center;">
    <form style="display: inline-block; margin-right:160px;">
        <p style="font-size: 15px;margin-left: 100px">
            <input style="        width: 100%;
        box-sizing: border-box;
        border: 2px solid #d1d0d0;
        border-radius: 4px;
        font-size: 16px;
        background-color: white;
        background-position: 10px 10px;
        background-repeat: no-repeat;
        text-align: center;
        padding: 12px 20px 12px 40px;"
                   type="text" asp-for="SearchString" placeholder="Enter a role" /><br />
            <br /> <input type="submit" value="Enter" class="btn btn-primary btn-group-lg" />
        </p>
    </form>
</body>
<br />
@if (TempData["message"] != null)
{
    <p><font color="red">@TempData["message"]</font></p>
}

<h3>Role View - show the users in each role </h3>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>Role Name </th>
            <th>Users assigned to this role</th>
            <th>No. of Users</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Listroles)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.Name)</td>
                <td> @Model.ListUsersInRole(item.Name)</td>
                <td> @Model.Usercountinrole </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<div class="row">
    <div class="col-md-4">
        <a class="btn btn-primary btn-group-lg" asp-page="ManageDelete">Delete Role</a>
        <a class="btn btn-primary btn-group-lg" asp-page="ManageAssign">Add Role</a>
        <a class="btn btn-primary btn-group-lg" asp-page="./Index">Back to List</a>
    </div>
</div>


