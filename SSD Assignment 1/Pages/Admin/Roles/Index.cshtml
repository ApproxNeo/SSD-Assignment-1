@page
@model IndexModel
@{
    ViewData["Title"] = "Role Listing";
}
<h2>Role Listing</h2>
<body style=" text-align: center;">
    <form style="display: inline-block; margin-right:160px;">
        <p style="font-size: 15px;margin-left: 100px">
            <input style="        width: 100%;
        box-sizing: border-box;
        border: 2px solid #d1d0d0;
        border-radius: 4px;
        font-size: 16px;
        background-color: white;
        background-position: 10px 10px;
        background-repeat: no-repeat;
        text-align: center;
        padding: 12px 20px 12px 40px;"
                   type="text" asp-for="Searchstring" placeholder="Enter a role" /><br />
            <br /> <input type="submit" value="Enter" class="btn btn-primary btn-group-lg" />
        </p>
    </form>
</body>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationRole[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationRole[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ApplicationRole)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="row">
    <div class="col-md-4">
        <a class="btn btn-primary btn-group-lg" asp-page="Create">Create New Role</a>&nbsp;&nbsp;&nbsp;&nbsp;
        <a class="btn btn-primary btn-group-lg" asp-page="Manage">Manage User Roles</a>
    </div>
</div>

